{% for i in range(num_pipeline_stages) %}
  {% for j in range(num_alus_per_stage) %}
// Stateless ALU action
{% set opcode = stateless_alus[i][j] %}
action {{sketch_name}}_stateless_alu_{{i}}_{{j}}_action () {
    // NOTE: Please use the same opcode for the ones in
    // stateless_alu_for_tofino.alu
    {% if opcode == 0 %}
    modify_field(mdata.result1, mdata.valu1);
    {% elif opcode == 1 %}
    add(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 2 %}
    subtract(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 3 %}
    bit_and(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 4 %}
    bit_andca(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 5 %}
    bit_andcb(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 6 %}
    bit_nand(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 7 %}
    bit_nor(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 8 %}
    bit_not(mdata.result1, mdata.value1);
    {% elif opcode == 9 %}
    bit_or(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 10 %}
    bit_orca(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 11 %}
    bit_orcb(mdata.result1, mdata.value1, mdata.value2);
    {% elif opcode == 12 %}
    max(mdata.result1, mdata.value1, mdata.value2);
    {% else %}
    min(mdata.result1, mdata.value1, mdata.value2);
    {% endif %}
}

// Stateless ALU table
@pragma stage {{i}}
table {{sketch_name}}_stateless_alu_{{i}}_{{j}}_table {
    actions {
        {{sketch_name}}_stateless_alu_{{i}}_{{j}}_action;
    }
    default_action:  {{sketch_name}}_stateless_alu_{{i}}_{{j}}_action;
}
  {% endfor %}
{% endfor %}

// Required: mac_forward table for forwarding to switch CPU.
action set_egr(egress_spec) {
    modify_field(ig_intr_md_for_tm.ucast_egress_port, egress_spec);
}
table mac_forward {
    reads {
        ethernet.dstAddr : exact;
    }
    actions {
        set_egr;
    }
    size:1;
}

control ingress {
    // Call all the required ALUs.
    {% for i in range(num_pipeline_stages) %}
      {% for j in range(num_alus_per_stage) %}
        apply({{sketch_name}}_stateless_alu_{{i}}_{{j}});
      {% endfor %}
      {% for j in range(num_state_groups) %}
        apply({{sketch_name}}_stateful_alu_{{i}}_{{j}});
      {% endfor %}
    {% endfor %}
    // MAC Forwarding by default
    apply(mac_forward);
}

